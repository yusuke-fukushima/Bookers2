<% @book.book_comments.each do |book_comment| %>
  <td>
    <%= link_to user_path(book_comment.user), remote: true do %>
      <%= attachment_image_tag(book_comment.user, :profile_image, size: "40x40", fallback: "no-image-icon.jpg") %><br>
      <%= book_comment.user.name %>
    <% end %>
  </td>
  <td><%= book_comment.comment %></td>
  <td>
    <% if book_comment.user == current_user %>
      <div class="comment-delete">
        <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      </div>
    <% end %>
  </td>
<% end %>