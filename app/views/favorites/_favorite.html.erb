<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
      <span class="fa fa-heart text-danger like-btn-unlike"></span>
      <span class="text-danger"><%= book.favorites.count %></span>
    <% end %>
  </p>
<% else %>
  <p class="text-primary">
    <%= link_to book_favorites_path(book), method: :post, remote: true do %>
      <span class="fa fa-heart text-primary like-btn"></span>
      <span class="text-primary"><%= book.favorites.count %></span>
    <% end %>
  </p>
<% end %>