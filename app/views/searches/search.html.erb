<% if @range == '1' %>
  <h2>Users search for <%= @word %></h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
        <% @user.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, size: "40x40", fallback: "no-image-icon.jpg") %></td>
          <td><%= user.name %></td>
          <td><%= link_to 'show', user_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <h2>Books search for <%= @word %></h2>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @book.each do |book| %>
          <tr>
            <td><%= attachment_image_tag(book.user, :profile_image, size: "40x40", fallback: "no-image-icon.jpg") %></td>
            <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>